<% if(prodFound){ %>
    <table class="eight columns">
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        <tbody>
            <% productsList.forEach( product => { %>
                <tr>
                    <th><%= product.id %></th>
                    <th><%= product.title %></th>
                    <th><%= product.price %></th>
                    <th><img src="<%= product.thumbnail %>" alt=""></th>
                </tr>
            <% }); %>    
        </tbody>

    </table>
<% } else { %>
    <h2>No hay productos</h2>  
<% } %>